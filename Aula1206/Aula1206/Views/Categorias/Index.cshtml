@foreach (var cat in Model)
{
    <dl>
        <dt>@cat.Nome</dt>
        @if (!string.IsNullOrEmpty(cat.Descricao))
        {
            <dd>@cat.Descricao</dd>
        }
        else
        {
        <dd>
                <em>Sem descrição</em>
        </dd>
        }

    </dl>
  
}


